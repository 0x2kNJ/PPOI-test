{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "bermuda-bay-sdk": ["./lib/sdk/build/src/index.d.ts"]
    }
  },
  "include": ["src/**/*", "lib/sdk/build/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
